{
  "framework": "nextjs-app-router",
  "language": "typescript",
  "packageManager": "npm",
  "ui": {
    "styling": "tailwind",
    "componentSystem": "shadcn-ui"
  },
  "testing": {
    "unit": "vitest",
    "e2e": "playwright"
  },
  "visual_proof": {
    "mode": "playwright",
    "fallback_to_interactive": false,
    "playwright": {
      "headed_when_tty": false,
      "grep": "@e2e",
      "artifacts_dir": ".planning/artifacts"
    }
  },
  "preferredProviders": {
    "db": ["neon"],
    "auth": ["clerk", "neon-auth"],
    "authDefault": "clerk",
    "deploy": ["render"],
    "payments": ["stripe"],
    "objectStorage": ["cloudflare_r2"],
    "analytics": ["posthog"],
    "voice": ["deepgram"],
    "agents": ["mastra"],
    "agentAuth": ["authdev"],
    "agentMail": ["agentmail"],
    "sandbox": ["e2b"],
    "browserAutomation": ["browserbase"]
  },
  "discouragedProviders": {
    "list": ["firebase", "supabase", "auth0", "vercel", "planetscale"],
    "note": "These providers are discouraged but allowed with explicit reason recorded in Deviation Notes"
  }
}
